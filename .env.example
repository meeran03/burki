# Server settings
PORT=8000
HOST=localhost

# Twilio credentials
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Deepgram credentials
DEEPGRAM_API_KEY=your-deepgram-api-key

# OpenAI settings
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# ElevenLabs settings
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL  # Default voice

# Database settings (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/diwaar_db

# Call settings
IDLE_TIMEOUT=30
MAX_IDLE_MESSAGES=3
END_CALL_MESSAGE=Thank you for calling. Goodbye!

# Voice detection settings
SILENCE_MIN_DURATION_MS=500
ENERGY_THRESHOLD=50
WAIT_AFTER_SPEECH_MS=700
NO_PUNCTUATION_WAIT_MS=300
VOICE_SECONDS_THRESHOLD=2
WORD_COUNT_THRESHOLD=5

# Security Keys
SECRET_KEY=your-secret-key-for-sessions-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Security
BCRYPT_ROUNDS=12

# File Storage
RECORDINGS_DIR=recordings

# Application Settings
APP_ENV=development
DEBUG=true
